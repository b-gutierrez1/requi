# ===========================================
# CONFIGURACIÓN PARA SERVIDOR DE PRODUCCIÓN
# ===========================================
# Copia este archivo como .env en tu servidor

# Configuración del Aplicativo
APP_ENV=production
APP_DEBUG=false
APP_URL=https://tudominio.com
APP_BASE_PATH=/requi-mvc

# Base de Datos del Servidor
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=bd_prueba
DB_USERNAME=root
DB_PASSWORD=
DB_LOG_QUERIES=false

# Database de Testing (opcional)
DB_TEST_DATABASE=requi_mvc_test

# Autenticación Azure - MANTENER LOS MISMOS VALORES
AZURE_AUTH_ENABLED=true
AZURE_CLIENT_ID=YOUR_AZURE_CLIENT_ID
AZURE_CLIENT_SECRET=YOUR_AZURE_CLIENT_SECRET
AZURE_TENANT=common
AZURE_REDIRECT_URI=https://tudominio.com/auth/azure/callback

# Configuración de Email del Servidor
MAIL_ENABLED=true
MAIL_FROM_ADDRESS=requisiciones@tudominio.com
MAIL_FROM_NAME="Sistema de Requisiciones - Producción"
MAIL_TEST_MODE=false
MAIL_TEST_RECIPIENT=

# Seguridad
DB_ENCRYPTION_KEY=genera_una_clave_aleatoria_aqui
SESSION_LIFETIME=120
SESSION_SECURE=true

# Caché y Logs
CACHE_DRIVER=file
CACHE_TTL=3600
LOG_LEVEL=error
LOG_MAX_FILES=30

# ============================================================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ============================================================================

# Entorno: development, production, testing
APP_ENV=development

# Modo debug (true para desarrollo, false para producción)
APP_DEBUG=true

# URL base de la aplicación
APP_URL=http://localhost:8000

# Nombre de la aplicación
APP_NAME="Sistema de Requisiciones"

# Zona horaria
APP_TIMEZONE=America/Guatemala

# Locale
APP_LOCALE=es

# ============================================================================
# BASE DE DATOS
# ============================================================================

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=ordencompradb
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# ============================================================================
# AZURE ACTIVE DIRECTORY (OAuth2)
# ============================================================================

# Client ID de tu App Registration en Azure
AZURE_CLIENT_ID=tu-client-id-aqui

# Client Secret de tu App Registration
AZURE_CLIENT_SECRET=tu-client-secret-aqui

# Tenant ID de tu Azure AD
AZURE_TENANT_ID=tu-tenant-id-aqui

# URI de redirección (debe coincidir con lo configurado en Azure)
AZURE_REDIRECT_URI=http://localhost:8000/auth/callback

# ============================================================================
# CONFIGURACIÓN DE EMAIL
# ============================================================================

# Servidor SMTP
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=tu-email@gmail.com
MAIL_PASSWORD=tu-password-aqui
MAIL_ENCRYPTION=tls

# Remitente por defecto
MAIL_FROM_ADDRESS=tu-email@gmail.com
MAIL_FROM_NAME="Sistema de Requisiciones"

# ============================================================================
# SESIÓN
# ============================================================================

# Nombre de la sesión
SESSION_NAME=requi_mvc_session

# Tiempo de vida de la sesión (en minutos)
SESSION_LIFETIME=120

# Driver de sesión: file, database
SESSION_DRIVER=file

# Path para guardar sesiones (si se usa file)
SESSION_PATH=

# ============================================================================
# SEGURIDAD
# ============================================================================

# Clave secreta para tokens CSRF
APP_KEY=

# Mismo sitio para cookies: strict, lax, none
SESSION_SAME_SITE=lax

# Cookies seguras (true en HTTPS)
SESSION_SECURE=false

# ============================================================================
# LOGS
# ============================================================================

# Nivel de log: debug, info, warning, error
LOG_LEVEL=debug

# Path de logs
LOG_PATH=

# ============================================================================
# ARCHIVOS
# ============================================================================

# Directorio para archivos adjuntos
UPLOAD_PATH=storage/uploads

# Tamaño máximo de archivo (en MB)
MAX_UPLOAD_SIZE=10

# Extensiones permitidas (separadas por coma)
ALLOWED_EXTENSIONS=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,gif

# ============================================================================
# NOTIFICACIONES
# ============================================================================

# Habilitar notificaciones por email
ENABLE_EMAIL_NOTIFICATIONS=true

# Habilitar recordatorios automáticos
ENABLE_AUTO_REMINDERS=true

# Días para enviar recordatorio
REMINDER_DAYS=3

# ============================================================================
# CACHE
# ============================================================================

# Driver de cache: file, redis, memcached
CACHE_DRIVER=file

# Tiempo de vida de cache (en minutos)
CACHE_LIFETIME=60

# ============================================================================
# CONFIGURACIÓN ADICIONAL
# ============================================================================

# URL de la API (si aplica)
API_URL=

# Habilitar modo mantenimiento
MAINTENANCE_MODE=false

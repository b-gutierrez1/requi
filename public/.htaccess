# ============================================
# CONFIGURACIÓN LOCAL ÚNICAMENTE
# ============================================
# En el servidor, este archivo se deshabilita
# moviendo a .htaccess.disabled porque 
# AllowOverride None en Apache
# ============================================

RewriteEngine On

# RewriteBase solo para desarrollo local con Alias
RewriteBase /requi

# Proteger archivos sensibles
RewriteRule ^(\..+|composer\.json|composer\.lock|package\.json)$ - [F,L]

# Si existe el archivo/directorio, servir directamente
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Redirigir todo a index.php
RewriteRule ^(.*)$ index.php [QSA,L]
{
    "name": "empresa/sistema-requisiciones-mvc",
    "description": "Sistema de Requisiciones y Ã“rdenes de Compra con arquitectura MVC",
    "type": "project",
    "version": "2.0.0",
    "keywords": [
        "requisiciones",
        "ordenes de compra",
        "mvc",
        "azure ad",
        "autorizaciones",
        "workflow"
    ],
    "license": "proprietary",
    "authors": [
        {
            "name": "Tu Nombre",
            "email": "tu_email@empresa.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-pdo": "*",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "phpmailer/phpmailer": "^6.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/Helpers/Config.php",
            "app/Helpers/View.php",
            "app/Helpers/Session.php",
            "app/Helpers/Redirect.php",
            "app/Helpers/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "serve": "php -S localhost:8000 -t public/",
        "post-autoload-dump": [
            "@php -r \"echo 'Autoload generado correctamente\\n';\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "support": {
        "issues": "https://github.com/tu-usuario/requisiciones-mvc/issues",
        "source": "https://github.com/tu-usuario/requisiciones-mvc"
    }
}
